{
    "manifest_version": 3,
    "name": "Answer the Ovice",
    "version": "1.8",
    "default_locale": "en",
    "description": "__MSG_extensionDescription__",
    "icons": {
      "48": "image/icon.png"
    },
    "action": {
      "default_icon": "image/icon_disable.png"
    },
    "background": {
      "service_worker": "js/background.js"
    },
    "permissions": ["activeTab", "scripting", "tabs", "storage", "idle"],
    "content_scripts": [
      {
        "matches": ["https://*.ovice.in/*", "https://app.rc.ovice.com/ws/*"],
        "js": ["js/content.js"],
        "run_at": "document_idle"
      }
    ],
    "options_page": "html/options.html",
    "commands": {
      "toggle-microphone": {
        "description": "__MSG_commandToggleMicrophone__",
        "global": true
      },
      "toggle-microphone-and-active-tab": {
        "description": "__MSG_commandToggleMicrophoneAndActiveTab__",
        "global": true
      }
    }
}
